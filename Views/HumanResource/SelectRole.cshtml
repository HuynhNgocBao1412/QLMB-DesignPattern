@using QLMB.Models;
@using QLMB.Design_Pattern.Singleton;
@model QLMB.Models.ChucVu
@{
    NhanVien User = (NhanVien)Session["EmployeeInfo"];
    NhanVien Current = (NhanVien)Session["HumanResourceEmployeeTemp"];
}

@if (Session["Page"].ToString() == "EmployeeDetail" && User.MaChucVu.Trim() == Current.MaChucVu.Trim() && Current.MaChucVu.Trim() == "NS")
{
    @Html.DropDownListFor(model => model.MaChucVu, new SelectList(ChucVu_Singleton.Instance.ListChucVu, "MaChucVu", "TenCV", ChucVu_Singleton.Instance.CurrentRole), new { @class = "form-control", @disabled = "disabled" })
}
else
{
    @Html.DropDownListFor(model => model.MaChucVu, new SelectList(ChucVu_Singleton.Instance.ListChucVu, "MaChucVu", "TenCV", ChucVu_Singleton.Instance.CurrentRole), new { @class = "form-control" })
}
